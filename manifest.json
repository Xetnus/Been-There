{
  "manifest_version": 2,

  "name": "Been There - a Google Maps Utility",
  "description": "Logs the places you visit on Google Maps for auditing and record keeping.",
  "version": "1.0",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "map-pin-active.png",
    "default_popup": "popup.html",
    "default_title": "Been There - a Google Maps Utility"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["google.js"]
    }
  ],
  "permissions": [
   "storage", "unlimitedStorage", "webRequest", "tabs",
   "https://maps.googleapis.com/maps/api/place/*"
  ]
}
